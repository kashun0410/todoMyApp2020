- content_for(:html_title) {'ユーザー情報編集/To-Do'}

.account-page
  .header
    = render "shared/header_main"
  .account-page__content
    .contents
      %h2.contents__head
        ユーザー情報の編集
      = form_for(current_user) do |f|
        .field
          .field__label
            = f.label :name, "ニックネーム"
          .field__input
            = f.text_field :name, autofocus: true
        .field
          .field__label
            = f.label :email, "メールアドレス"
          .field__input
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'action'
        .edit__login-out
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'edit__login-out__btn'
      